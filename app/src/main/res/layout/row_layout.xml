<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <Button
        android:id="@+id/buttonUp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="16dp"
        android:text="⇑"
        android:textSize="24sp"
        android:layout_constraintHorizontal_bias="0.5"
        android:layout_constraintLeft_toRightOf="@+id/editText4"
        android:layout_constraintRight_toLeftOf="@+id/button7"
        android:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonDown"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="⇓"
        android:textSize="24sp"
        android:layout_constraintLeft_toRightOf="@id/button6"
        android:layout_constraintRight_toLeftOf="@+id/button8"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_constraintBottom_toBottomOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_constraintVertical_bias="0.0"
        android:layout_editor_absoluteX="192dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Reset" />

    <EditText
        android:id="@+id/editTextNum"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:layout_constraintLeft_toLeftOf="parent"
        android:layout_constraintRight_toLeftOf="@id/button6"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"
        android:layout_alignBottom="@+id/buttonUp" />

    <Button
        android:id="@+id/buttonEdit"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_constraintRight_toRightOf="parent"
        android:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:text="edit" />

</LinearLayout>